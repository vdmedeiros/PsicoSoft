@using PsicoSoft.WebApp.MVC.Extensions
@model IEnumerable<PsicoSoft.WebApp.MVC.Models.PacienteViewModel>

@{
    ViewData["Title"] = "Todos os pacientes";
}

<section>
    <div>
        <div style="background-image: url(images/banners/Template.jpg); height: 100%; background-position: center; background-repeat: no-repeat; background-size: cover">
            <div style="text-align: center;">
                <img src="~/images/banners/nerdstore.png" />
            </div>
        </div>
        <div class="container" style=" padding-top: 20px">
            <div class="row">
                @{
                    foreach (var paciente in Model.OrderBy(p => p.Nome))
                    {
                        <div class="col-md-3">
                            <div href="#">
                                <a asp-controller="Paciente" asp-action="PacienteDetalhe" asp-route-id="@paciente.Id" >
                                </a>
                                <figcaption class="info-wrap">
                                    <a asp-controller="Paciente" asp-action="PacienteDetalhe" asp-route-id="@paciente.Id" class="title">
                                        <b> @paciente.Nome</b>
                                    </a>
                                </figcaption>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
    </div>
</section>